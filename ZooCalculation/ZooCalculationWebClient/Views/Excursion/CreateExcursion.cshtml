@model ZooCalculationWebClient.Models.CreateExcursion

@{
    ViewData["Title"] = "Создать экскурсию";
}

<div class="text-center text-info">
    <h1>@ViewData["Title"]</h1>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @style = "color: red" })
    <p>Мой курс обучения:</p>
    <table class="table">
        <tr>
            <td><justify>Маршрут</justify></td>
            <td>Дата начала маршрута</td>
            <td>Цена</td>
        </tr>
        @foreach (ZooCalculationBussinesLogic.ViewModels.RouteViewModel course in ViewBag.RouteForExcursions)
        {
    <tr>
        <td><justify>@course.RouteName</justify></td>
        <td>@course.StartRoute</td>
        <td><input type="number" name="Model.RouteForExcursions[@course.Id]" value="0" min="0" /></td>
        <td>@course.Cost</td>
        <td><input type="checkbox" name="Model.RouteForExcursion[@course.Id]" value="0" /></td>
    </tr>
        }
    </table>
    <button type="submit" class="btn btn-info btn-sm">Создать</button>
}